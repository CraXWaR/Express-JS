<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{crypto.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{crypto.name}}</h1>
            <h3 id="payment">Payment method: {{crypto.paymentMethod}}</h3>
            <p id="price"><span>Price: $31 166.71</span></p>
            <p id="description">{{crypto.cryptoDescription}}</p>
        </div>
        {{#if user}}
        <div class="product-btn">
            {{!-- Only for registered user and author of the publication --}}
            {{#if crypto.isOwner}}
            <div class="author">
                <a href="#" class="btn-edit">Edit</a>
                <a href="#" class="btn-delete">Delete</a>
            </div>
            {{else}}
                {{!-- Logged in user who has already buy this crypt --}}
                {{#if crypto.isBougth}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                {{!-- Logged in user who has not yet buy this crypt --}}
                <a href="/details/{{crypto._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>