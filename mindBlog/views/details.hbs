<div class="details-container">
    <div class="details-container-image">
        <img src="{{blog.blogImg}}">
    </div>
    <div class="details-container-info">
        <h2>{{blog.title}}</h2>
        <h3>{{blog.blogCategory}}</h3>
        <h3>By: {{blog.ownerEmail}}</h3>
        <!--If there are followers-->
        {{#if blog.followUsers}}
        <h4>Follow By: {{follwUsers}}</h4>
        <!--If there are no followers-->
        {{else}}
        <h4>There are no followers yet!</h4>
        {{/if}}
    </div>
    <div class="details-container-content">
        <p>{{blog.blogContent}}</p>
    </div>
    {{#if user}}
    <div class="btn-container">
        <!-- Only for registered user and creator of the blog post-->
        {{#if blog.isOwner}}
        <a href="/details/{{blog._id}}/edit">Edit</a>
        <a href="/details/{{blog._id}}/delete">Delete</a>
        {{else}}
            <!-- logged in user who has not yet followed the blog-->
            {{#unless blog.isFollow}}
            <a href="/details/{{blog._id}}/follow">Follow</a>
            <!-- logged in user who has already followed the blog-->
            {{else}}
            <p class="follow-pub">You already follow this blog!</p>
            {{/unless}}
        {{/if}}
    </div>
    {{/if}}
</div>