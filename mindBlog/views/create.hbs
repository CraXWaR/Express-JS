<section id="create-container">
    <div class="create-container-info">
        <h1>Create Blog</h1>
        <form action="/create" method="post">
            <label>Title:</label>
            <input name="title" type="text" id="title">

            <label>Image:</label>
            <input name="blogImg" type="text" id="image" placeholder="http://...">

            <label>Content:</label>
            <textarea id="content" name="blogContent"></textarea>

            <label>Blog Category:</label>
            <input name="blogCategory" type="text" id="category">

            <input type="submit" id="btn" value="POST">
        </form>
    </div>
</section>